<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Application name -->
    <springProperty scope="context"
                    name="APPLICATION_NAME"
                    source="spring.application.name"
                    defaultValue="order-placement-service"/>

    <!-- Absolute path is safer for Filebeat -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- ================= CONSOLE ================= -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{traceId:-NO_TRACE}] [%thread] %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ================= JSON FILE FOR FILEBEAT ================= -->
    <appender name="JSON_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- IMPORTANT -->
        <file>${LOG_PATH}/application.json</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.json.gz
            </fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>

            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <!-- CRITICAL: NDJSON encoder -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">

            <!-- ensures ONE JSON PER LINE -->
            <includeContext>false</includeContext>
            <includeCallerData>false</includeCallerData>

            <fieldNames>
                <timestamp>@timestamp</timestamp>
                <message>message</message>
                <logger>logger_name</logger>
                <thread>thread_name</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>

            <!-- static metadata -->
            <customFields>
                {
                "application":"${APPLICATION_NAME}",
                "service":"order-placement"
                }
            </customFields>

            <!-- MDC -->
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>method</includeMdcKeyName>
            <includeMdcKeyName>path</includeMdcKeyName>
            <includeMdcKeyName>status</includeMdcKeyName>
            <includeMdcKeyName>durationMs</includeMdcKeyName>

            <!-- stacktrace is JSON-safe -->
            <throwableConverter
                    class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>

        </encoder>
    </appender>

    <!-- ================= ASYNC (NON-BLOCKING) ================= -->
    <appender name="ASYNC_JSON_FILE"
              class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock>
    </appender>

    <!-- ================= LOGGERS ================= -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_JSON_FILE"/>
    </root>

    <logger name="com.telekom.orderPlacement" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_JSON_FILE"/>
    </logger>

    <!-- reduce noise -->
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.springframework" level="ERROR"/>

</configuration>
